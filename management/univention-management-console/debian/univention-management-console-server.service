[Unit]
Description=Univention Management Console Server
After=network.target remote-fs.target
Wants=slapd.service

[Service]
Type=exec
KillMode=control-group
UMask=0077
LimitNOFILE=64512
ExecStart=python3 -m univention.management.console.protocol.server
ExecStop=/bin/kill $MAINPID
ExecReload=/bin/kill -SIGUSR1 $MAINPID
User=root
Group=root

[Install]
WantedBy=multi-user.target
Alias=univention-management-console-web-server.service
